{
  "name": "Weather + Pokemon Dashboard Layout",
  "description": "Weather dashboard with daily Pokemon sprite in top-right corner",
  "grid": {
    "rows": 12,
    "cols": 8,
    "margin": 15,
    "gap": 8
  },
  "components": [
    {
      "type": "title",
      "position": { "row": 0, "col": 0, "colSpan": 5 },
      "config": {
        "text": "WEATHER DASHBOARD",
        "fontSize": 26,
        "fontWeight": "bold"
      }
    },
    {
      "type": "pokemon-sprite",
      "position": { "row": 0, "col": 5, "rowSpan": 5, "colSpan": 3 },
      "config": {
        "showNumber": false,
        "showName": true,
        "fontSize": 13,
        "spriteSize": 1.0
      }
    },
    {
      "type": "clock",
      "position": { "row": 1, "col": 0, "rowSpan": 2, "colSpan": 2 },
      "config": {
        "fontSize": 36,
        "showSeconds": false,
        "format": "h:mm a"
      }
    },
    {
      "type": "date",
      "position": { "row": 1, "col": 2, "rowSpan": 2, "colSpan": 3 },
      "config": {
        "fontSize": 14,
        "showDayOfYear": false,
        "dayFormat": "EEEE",
        "dateFormat": "MMM do, yyyy"
      }
    },
    {
      "type": "weather",
      "position": { "row": 5, "col": 0, "rowSpan": 5, "colSpan": 8 },
      "config": {
        "title": "CURRENT WEATHER",
        "fontSize": 17,
        "titleSize": 1.3,
        "showCurrent": true,
        "showForecast": true,
        "showWind": true,
        "showHumidity": true,
        "forecastDays": 3
      }
    },
    {
      "type": "device-stats",
      "position": { "row": 10, "col": 0, "rowSpan": 2, "colSpan": 4 },
      "config": {
        "title": "DEVICE",
        "fontSize": 13,
        "titleSize": 1.1,
        "showBattery": true,
        "showTemperature": false,
        "showWifi": true,
        "showMemory": false,
        "showUptime": false,
        "showLastUpdate": true
      }
    },
    {
      "type": "stats",
      "position": { "row": 10, "col": 4, "rowSpan": 2, "colSpan": 4 },
      "config": {
        "title": "SYSTEM",
        "fontSize": 13,
        "titleSize": 1.1,
        "showGenerated": true,
        "showTimezone": false,
        "showResolution": false,
        "customStats": [
          "Weather: Open-Meteo API",
          "Format: Grayscale PNG"
        ]
      }
    }
  ]
}
